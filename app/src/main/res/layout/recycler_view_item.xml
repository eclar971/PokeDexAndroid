<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="#000000"
    android:clipToPadding="false"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    tools:layout_editor_absoluteX="8dp">

    <ImageView
        android:id="@+id/rounded"
        android:layout_width="171dp"
        android:layout_height="173dp"
        android:background="@drawable/rounded"
        android:contentDescription="@string/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded" />

    <TextView
        android:id="@+id/poke_name"
        android:layout_width="171dp"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textColor="#C3C3C3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rounded"
        app:layout_constraintEnd_toEndOf="@+id/rounded"
        app:layout_constraintStart_toEndOf="@+id/rounded"
        app:layout_constraintStart_toStartOf="@+id/rounded"
        app:layout_constraintTop_toBottomOf="@+id/poke_image" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poke_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:drawingCacheQuality="auto"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/rounded"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/rounded"
        app:layout_constraintTop_toTopOf="@+id/rounded" />

</androidx.constraintlayout.widget.ConstraintLayout>